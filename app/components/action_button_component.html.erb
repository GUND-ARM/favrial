<%= form_with(model: @tweet) do |form| %>
  <div class="row">
    <div class="col col-6">
      <%= form.button :classification,
        value: Tweet::Classification::SULEMIO,
        class: "btn btn-primary btn-lg text-nowrap w-100" do %>
        スレミオ
      <% end %>
    </div>
    <div class="col col-6">
      <div class="dropdown w-100">
        <button class="btn btn-secondary btn-lg dropdown-toggle w-100" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
          それ以外
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <li>
            <%= form.button :classification,
              value: Tweet::Classification::MIORINE,
              class: "dropdown-item" do %>
              &#x1f345;&nbsp;ミオリネ&nbsp;&#x1f345;
            <% end %>
            <%= form.button :classification,
              value: Tweet::Classification::SULETTA,
              class: "dropdown-item" do %>
              &#x1f99d;&nbsp;スレッタ&nbsp;&#x1f99d;
            <% end %>
            <li><hr class="dropdown-divider"></li>
            <%= form.button :classification,
              value: Tweet::Classification::OTHER,
              class: "dropdown-item" do %>
              その他
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
