<%#= turbo_stream.replace "next_page", @tweets %>
<%= turbo_frame_tag "page_handler" do %>
  <%= turbo_stream_action_tag(
    "append",
    target: "tweets",
    template: %(#{render @tweets})
  )%>
  <%= turbo_stream.replace "next_page_button" do %>
    <%= turbo_frame_tag("next_page_button") do %>
      <%= link_to "もっと！", path_to_next_page(@tweets), class: "btn btn-primary", data: { turbo_frame: "page_handler" } %>
    <% end %>
  <% end %>
<% end %>
